<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Scanner Analyer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" id="main-menu">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Analysis", "Index", "Product")</li>
                <li>@Html.ActionLink("Vendors Mgmt", "Index", "VendorManagement")</li>
                <li>@Html.ActionLink("Scan Items", "Index", "ScanItems")</li>
                <li>@Html.ActionLink("Scheduled", "Index", "Scheduled")</li>
            </ul>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
</div>

<div class="modal fade" role="dialog" id="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Web Scanner Analyzer</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/site")
@RenderSection("scripts", required: false)
</body>
</html>

<script type="text/javascript">
    siteRoot = '@Request.ApplicationPath';
    if (!siteRoot.endsWith('/'))
        siteRoot += '/';
</script>